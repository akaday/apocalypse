---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Apocalypse: Survive the zombies!">
  <div
    style="background-image: radial-gradient(#6692cf 0%, #401986 70%);"
    class="flex h-screen flex-col items-center"
  >
    <!-- Top graphic -->

    <div
      class="flex max-h-[35vh] w-full items-end justify-center overflow-hidden"
    >
      <img class="w-full object-cover" src="/top.svg" alt="Top Graphic" />
    </div>

    <!-- Text content -->

    <div
      class="mx-2 mt-[5vh] flex max-w-[1200px] grow flex-col space-y-5 text-center text-white xs:space-y-8 sm:mx-12 sm:space-y-11"
    >
      <div class="space-y-10">
        <div>
          <p class="text-sm uppercase tracking-wide xs:text-lg sm:text-2xl">
            Welcome to the
          </p>

          <h1
            class="text-3xl font-bold uppercase tracking-wide xs:text-5xl sm:text-7xl md:text-8xl"
          >
            Apocalypse
          </h1>
        </div>

        <p class="text-sm tracking-wide xs:text-lg sm:text-2xl">
          Location TBA — March 8–10th, 2024
        </p>

        <div class="flex flex-col">
          <p class="xs:text-md text-sm tracking-wide sm:text-lg">
            Get notified when registrations open!
          </p>

          <div class="flex space-x-2 self-center">
            <input
              class="mt-3 rounded-full bg-secondary-bg px-3 py-2 text-sm placeholder-white placeholder-opacity-50 xs:px-6 xs:py-3 xs:text-lg md:text-xl"
              placeholder="you@example.com"
            />

            <button
              class="mt-3 self-center rounded-full bg-accent px-5 py-2 text-sm xs:px-10 xs:py-3 xs:text-lg md:text-xl"
            >
              ➡️
            </button>
          </div>
        </div>
      </div>

      <div>
        <p class="xs:text-lg md:text-xl">
          A <span class="font-bold text-accent">high school hackathon</span>
           where you can build <span
            id="changingText"
            class="inline-block underline decoration-accent decoration-wavy decoration-1 motion-safe:transition-all motion-safe:duration-200"
            >fun</span
          >
           things to <span class="font-bold text-accent">survive</span> the
          zombie apocalypse.
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  const changingText = document.getElementById("changingText");
  const words = ["fun", "weird", "wacky"];
  let i = 1;
  setInterval(() => {
    changingText.classList.add("motion-safe:-translate-y-3");
    changingText.classList.add("motion-safe:opacity-0");

    setTimeout(() => {
      changingText.innerText = words[i];
      changingText.classList.remove("motion-safe:-translate-y-3");
      changingText.classList.add("motion-safe:translate-y-3");
      i++;
      if (i >= words.length) i = 0;
    }, 200);

    setTimeout(() => {
      changingText.classList.remove("motion-safe:translate-y-3");
      changingText.classList.remove("motion-safe:opacity-0");
    }, 400);
  }, 5000);
</script>
